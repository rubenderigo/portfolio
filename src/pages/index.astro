---
import Layout from "../layouts/Layout.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Home from "../components/Home.astro";
import Experience from "../components/Experience.astro";
import Projects from "../components/Projects.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import CodeIcon from "../components/icons/Code.astro";
import ProfileCheckIcon from "../components/icons/ProfileCheck.astro";
import AboutMe from "../components/AboutMe.astro";
---

<Layout
  title="Ruben Derigo's Portfolio - Web Developer and Programmer"
  description="Hire Ruben Deriog to create your application. Web Developer. Specialized in creating web solutions."
>
  <main class="px-4">
    <SectionContainer class="py-16 md:py-36">
      <Home />
    </SectionContainer>
  </main>
  <div class="space-y-24">
    <SectionContainer id="experiencia">
      <h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-white">
        <Briefcase class="size-8" />
        Experiencia laboral
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos">
      <h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-white">
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-8 text-white">
        <ProfileCheckIcon class="size-8" />
        Sobre m√≠
      </h2>
      <AboutMe />
    </SectionContainer>
  </div>
</Layout>
